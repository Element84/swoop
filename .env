# postgres vars
# # using 127.0.0.1 instead of localhost because (co)lima
# hasn't implemented ipv6 port forwarding yet
DATABASE_HOST="127.0.0.1"
DATABASE_PORT="5432"
DATABASE_USER="postgres"
DATABASE_PASS="password"
DATABASE_NAME="swoop"
DATABASE_URL_EXTRA="?sslmode=disable"
DATABASE_URL="postgres://${DATABASE_USER}:${DATABASE_PASS}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}${DATABASE_URL_EXTRA}"

# dbmate vars
DBMATE_MIGRATIONS_TABLE="swoop.schema_migrations"

# minio vars
AWS_ACCESS_KEY_ID="minio"
AWS_SECRET_ACCESS_KEY="password"

# swoop vars
SWOOP_S3_ENDPOINT="http://127.0.0.1:9000"
SWOOP_BUCKET_NAME="swoop"
SWOOP_EXECUTION_DIR="s3://${SWOOP_BUCKET_NAME}/execution"
SWOOP_WORKFLOW_CONFIG_FILE="workflow-config.yml"
